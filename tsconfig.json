{
	"compilerOptions": {
		"target": "ESNext",
		"incremental": true,
		"module": "Node16",
		"rootDir": "./src",
		"moduleResolution": "nodenext",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "build",
		"declaration": true,
		"esModuleInterop": true
	},
	"include": ["src/*.ts"],
	"exclude": ["node_modules"]
}
